<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.courseworkhabittracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CourseworkHabitTracker"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".UserGuide"
            android:exported="false" />
        <activity
            android:name=".SocialHabitList"
            android:exported="false" />
        <activity
            android:name=".SocialHabit"
            android:exported="false" />
        <activity
            android:name=".SocialList"
            android:exported="false" />
        <activity
            android:name=".TakePhoto"
            android:exported="false" />
        <activity
            android:name=".AccountabilityGallery"
            android:exported="false" />
        <activity
            android:name=".UserSettings"
            android:exported="false" />
        <activity
            android:name=".EditHabit"
            android:exported="false" />
        <activity
            android:name=".UserHabit"
            android:exported="false" />
        <activity
            android:name=".AddNewHabit"
            android:exported="false" />
        <activity
            android:name=".UserHome"
            android:exported="false" />
        <activity
            android:name=".SignUp"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".NotificationHelper"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>